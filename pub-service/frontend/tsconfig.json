{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",

    // --- React / TSX support ---
    "jsx": "react-jsx",

    // --- Alias configuration ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  // --- Include both .ts and .tsx files ---
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

