# Messaging Microservice Configuration
# Copy this file to .env and modify as needed

# Service Settings
HOST=0.0.0.0
PORT=8000

# Database (MySQL XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=social_messaging

# Constructed DATABASE_URL
DATABASE_URL=mysql+aiomysql://root:@localhost/social_messaging
DATABASE_ECHO=true

# Auth Service
AUTH_SERVICE_URL=http://localhost:4000
JWT_SECRET=SAMPP_JWT_SECRET
JWT_ALGORITHM=HS256

# Development Mode (enables fallback auth via headers)
DEV_MODE=true

# API Gateway prefix (for service discovery)
API_PREFIX=/api/messaging

# CORS (comma-separated origins, * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Logging
LOG_LEVEL=INFO
